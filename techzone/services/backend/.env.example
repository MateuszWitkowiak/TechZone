# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Atlas Configuration
MONGODB_USERNAME=your-mongodb-username
MONGODB_PASSWORD=your-mongodb-password
MONGODB_CLUSTER=your-cluster.mongodb.net
MONGODB_DBNAME=techzone
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/techzone?retryWrites=true&w=majority

# Keycloak Configuration
KEYCLOAK_REALM_URL=http://keycloak:8080/realms/techzone
KEYCLOAK_CLIENT_ID=techzone-backend
KEYCLOAK_CLIENT_SECRET=your-client-secret

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key

# Application Configuration
API_VERSION=v1
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info